<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>AddThemes</servlet-name>
        <servlet-class>hibernate.controller.AddThemes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChooseThemes</servlet-name>
        <servlet-class>hibernate.controller.ChooseThemes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmProposal</servlet-name>
        <servlet-class>hibernate.controller.ConfirmProposal</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteThemes</servlet-name>
        <servlet-class>hibernate.controller.DeleteThemes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditThemes</servlet-name>
        <servlet-class>hibernate.controller.EditThemes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>hibernate.controller.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProposeThemes</servlet-name>
        <servlet-class>hibernate.controller.ProposeThemes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>hibernate.controller.Register</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>AddThemes</servlet-name>
        <url-pattern>/HibernateAddThemes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChooseThemes</servlet-name>
        <url-pattern>/HibernateChooseThemes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmProposal</servlet-name>
        <url-pattern>/HibernateConfirmProposal</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteThemes</servlet-name>
        <url-pattern>/HibernateDeleteThemes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditThemes</servlet-name>
        <url-pattern>/HibernateEditThemes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/HibernateLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProposeThemes</servlet-name>
        <url-pattern>/HibernateProposeThemes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/HibernateRegister</url-pattern>
    </servlet-mapping>

<!--    <servlet-mapping>-->
<!--        <servlet-name>default</servlet-name>-->
<!--        <url-pattern>/css/*</url-pattern>-->
<!--    </servlet-mapping>-->

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/img/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/css/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.png</url-pattern>
    </servlet-mapping>

    <mime-mapping>
        <extension>svg</extension>
        <mime-type>image/svg+xml</mime-type>
    </mime-mapping>


    <welcome-file-list>
        <welcome-file>Login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
